@model IEnumerable<Prog_POE.Models.User>

@{
    ViewData["Title"] = "Farmers";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-md-8">
            <h1 class="display-5"><i class="bi bi-people-fill text-success me-3"></i>Farmers Directory</h1>
            <p class="lead">Manage farmer profiles and their product offerings.</p>
        </div>
        <div class="col-md-4 text-end align-self-center">
            <a asp-action="Create" class="btn btn-success btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Add New Farmer
            </a>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card shadow">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>Registered Farmers</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Name</th>
                                    <th>Farm Name</th>
                                    <th>Location</th>
                                    <th>Email</th>
                                    <th>Products</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.FirstName @item.LastName</td>
                                        <td>@item.FarmName</td>
                                        <td>@item.FarmLocation</td>
                                        <td>@item.Email</td>
                                        <td>
                                            <a asp-controller="Products" asp-action="FarmerProducts" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-basket me-1"></i>View Products
                                            </a>
                                        </td>
                                        <td>
                                            <a asp-action="Details" asp-route-id="@item.UserId" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-info-circle me-1"></i>Details
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>