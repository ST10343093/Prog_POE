@model Prog_POE.Models.User

@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-body p-0">
                    <div class="row g-0">
                        <div class="col-12">
                            <div class="p-5">
                                <div class="text-center mb-4">
                                    <h3 class="fw-bold text-success mb-2">Create Your Account</h3>
                                    <p class="text-muted">Join the Agri-Energy Connect community</p>
                                </div>

                                <form asp-action="Register" method="post">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                                    <div class="row g-3 mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="FirstName" class="form-label">First Name</label>
                                            <input asp-for="FirstName" class="form-control" placeholder="Enter your first name" required />
                                            <span asp-validation-for="FirstName" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="LastName" class="form-label">Last Name</label>
                                            <input asp-for="LastName" class="form-control" placeholder="Enter your last name" required />
                                            <span asp-validation-for="LastName" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="Email" class="form-label">Email Address</label>
                                        <div class="input-group">
                                            <span class="input-group-text bg-light border-end-0">
                                                <i class="bi bi-envelope-fill text-success"></i>
                                            </span>
                                            <input asp-for="Email" class="form-control border-start-0" type="email" placeholder="Enter your email address" required />
                                        </div>
                                        <span asp-validation-for="Email" class="text-danger small"></span>
                                    </div>

                                    <div class="row g-3 mb-3">
                                        <div class="col-md-6">
                                            <label asp-for="Username" class="form-label">Username</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-end-0">
                                                    <i class="bi bi-person-fill text-success"></i>
                                                </span>
                                                <input asp-for="Username" class="form-control border-start-0" placeholder="Choose a username" required />
                                            </div>
                                            <span asp-validation-for="Username" class="text-danger small"></span>
                                        </div>
                                        <div class="col-md-6">
                                            <label asp-for="Password" class="form-label">Password</label>
                                            <div class="input-group">
                                                <span class="input-group-text bg-light border-end-0">
                                                    <i class="bi bi-lock-fill text-success"></i>
                                                </span>
                                                <input asp-for="Password" class="form-control border-start-0" type="password" placeholder="Create a password" required />
                                            </div>
                                            <span asp-validation-for="Password" class="text-danger small"></span>
                                        </div>
                                    </div>

                                    <div class="alert alert-light border-start border-4 border-success mb-4">
                                        <h6 class="fw-bold"><i class="bi bi-info-circle-fill me-2 text-success"></i>Farm Information</h6>
                                        <p class="small mb-0">As a farmer, please provide details about your farm.</p>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="FarmName" class="form-label">Farm Name</label>
                                        <input asp-for="FarmName" class="form-control" placeholder="Enter your farm name" />
                                        <span asp-validation-for="FarmName" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-3">
                                        <label asp-for="FarmLocation" class="form-label">Farm Location</label>
                                        <input asp-for="FarmLocation" class="form-control" placeholder="e.g., Western Cape, KwaZulu-Natal" />
                                        <span asp-validation-for="FarmLocation" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="FarmDescription" class="form-label">Farm Description</label>
                                        <textarea asp-for="FarmDescription" class="form-control" rows="3" placeholder="Describe your farm, specialties, and sustainable practices"></textarea>
                                        <span asp-validation-for="FarmDescription" class="text-danger small"></span>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-success btn-lg">Create Account</button>
                                        <a asp-action="Login" class="btn btn-outline-secondary">Already have an account? Sign in</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}